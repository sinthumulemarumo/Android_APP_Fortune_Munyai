<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fortune.pnpstore.LoginActivity">

    <ImageView
        android:id="@+id/YarbirdLogo"
        android:layout_width="276dp"
        android:layout_height="158dp"
        android:src="@drawable/logopnp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edUsername"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:hint="Username"
        android:textColor="#000000"
        android:layout_below="@id/YarbirdLogo"/>

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:hint="Password"
        android:textColor="#000000"
        android:layout_below="@id/edUsername"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#e3141e"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"

        android:background="@color/colorAccent"
        android:layout_below="@id/edPassword"
        android:onClick="onLogin"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#e3141e"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:layout_below="@id/btnLogin"/>

    <Button
        android:id="@+id/forgotPasswordButton"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:text="Forgot my password"
        android:textColor="#e3141e"
        android:textSize="14sp"
        android:background="@color/colorAccent"
        android:layout_below="@id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <ImageButton
        android:src="@mipmap/ic_launcher1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:id="@+id/imageButton1"

        android:scaleType="fitXY"
        android:clickable="true"
        android:layout_below="@+id/YarbirdLogo"
        android:layout_toRightOf="@+id/edUsername"
        android:layout_toEndOf="@+id/edUsername"/>

    <ImageButton
        android:src="@mipmap/ic_launcher1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:id="@+id/imageButton2"
        android:scaleType="fitXY"
        android:clickable="true"
        android:layout_below="@+id/edUsername"
        android:layout_toRightOf="@+id/edPassword"
        android:layout_toEndOf="@+id/edPassword"/>

</RelativeLayout>

