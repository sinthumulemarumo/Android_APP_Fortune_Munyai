<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fortune.pnpstore.LoginActivity">

    <ImageView
        android:id="@+id/YarbirdLogo"
        android:layout_width="276dp"
        android:layout_height="158dp"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edUsername"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:hint="Username"
        android:textColor="#000000"
        android:layout_below="@id/YarbirdLogo"/>

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:hint="Password"
        android:textColor="#000000"
        android:layout_below="@id/edUsername"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_round_corners"
        android:text="LOGIN"
        android:textColor="#ECF0F1"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:text="sign up for Pick n Pay"
        android:textColor="#ECF0F1"
        android:textSize="22sp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_round_corners2"
        android:layout_below="@id/btnLogin"/>

    <Button
        android:id="@+id/btnForgetPass"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_round_corners2"
        android:text="forgot my password"
        android:textColor="#ECF0F1"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/imbUInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/YarbirdLogo"
        android:layout_toEndOf="@+id/edUsername"
        android:layout_toRightOf="@+id/edUsername"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_button"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/help" />

    <ImageButton
        android:id="@+id/imbPInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/edUsername"
        android:layout_toEndOf="@+id/edPassword"
        android:layout_toRightOf="@+id/edPassword"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_button"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/help" />

</RelativeLayout>

